<h1>All books</h1>

<div class="col-md-10">
  <table class="table table-striped">
    <thead>
      <tr>
        <th>#</th>
        <th>Title</th>
        <th>Author</th>
        <th>Ordered?</th>
        <% if admin? %>
          <th>Edit</th>
        <% end %>
      </tr>
    </thead>
    <tbody>
      <% @books.each do |book| %>
        <tr>
          <td><%= book.id %></td>
          <td><%= link_to book.title, book_path(book) %></td>
          <td><%= book.author %></td>
          <td><%= book.ordered %></td>
          <% if admin? %>
            <td><%= link_to "Edit entry", edit_book_path(book) %></td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<% if admin? %>
  <%= link_to "Add new book", new_book_path, class: "btn btn-lg btn-success right" %>
<% end %>